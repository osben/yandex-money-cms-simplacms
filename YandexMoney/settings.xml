			<name>Частичный расчет и кредит</name>
			<value>partial_payment</value>
		</options>
		<options>
			<name>Кредит</name>
			<value>credit</value>
		</options>
		<options>
			<name>Выплата по кредиту</name>
			<value>credit_payment</value>
		</options>
	</settings>
	<settings>
		<variable>ya_kassa_payment_subject</variable>
		<name>Признак предмета расчета</name>
		<options>
			<name>Товар</name>
			<value>commodity</value>
		</options>
		<options>
			<name>Подакцизный товар</name>
			<value>excise</value>
		</options>
		<options>
			<name>Работа</name>
			<value>job</value>
