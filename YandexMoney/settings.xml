		<options>
			<name>Услуга</name>
			<value>service</value>
		</options>
		<options>
			<name>Ставка в азартной игре</name>
			<value>gambling_bet</value>
		</options>
		<options>
			<name>Выигрыш в азартной игре</name>
			<value>gambling_prize</value>
		</options>
		<options>
			<name>Лотерейный билет</name>
			<value>lottery</value>
		</options>
		<options>
			<name>Лотерейный билет</name>
			<value>lottery</value>
		</options>
		<options>
			<name>Выигрыш в лотерею</name>
			<value>lottery_prize</value>
		</options>
		<options>
			<name>Результаты интеллектуальной деятельности</name>
			<value>intellectual_activity</value>
