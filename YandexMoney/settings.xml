<?xml version="1.0" encoding="UTF-8"?>
<module>
	<name>
		Яндекс.Деньги (версия 1.2.7)
	</name>
	<settings>
		<variable>yandex_shopid</variable>
		<name>Идентификатор магазина (Shop ID)</name>
	</settings>
	<settings>
		<variable>yandex_scid</variable>
		<name>Номер витрины (Scid)</name>
	</settings>
	<settings>
		<variable>yandex_password</variable>
		<name>Пароль магазина (shopPassword)</name>
	</settings>
	<settings>
		<variable>yandex_paymode</variable>
		<name>Сценарий оплаты</name>
		<options>
			<name>Выбор оплаты на стороне сервиса Яндекс.Касса</name>
			<value>kassa</value>
		</options>
		<options>
			<name>Выбор оплаты на стороне магазина</name>
			<value>site</value>
		</options>
	</settings>
	<settings>
		<variable>ya_kassa_send_check</variable>
		<name>Отправлять в Яндекс.Кассу данные для чеков (54-ФЗ)</name>
		<options>
			<name>Включить</name>
			<value>1</value>
		</options>
        <options>
            <name>Выключить</name>
            <value>0</value>
        </options>
	</settings>
    <settings>
        <variable>ya_kassa_tax</variable>
        <name>Ставка по умолчанию</name>
        <options>
            <name>Без НДС</name>
            <value>1</value>
        </options>
        <options>
            <name>0%</name>
            <value>2</value>
        </options>
        <options>
            <name>10%</name>
            <value>3</value>
        </options>
        <options>
            <name>18%</name>
            <value>4</value>
        </options>
        <options>
            <name>Рассчётная ставка 10/110</name>
            <value>5</value>
        </options>
        <options>
            <name>Рассчётная ставка 18/118</name>
            <value>6</value>
        </options>
    </settings>
	<settings>
		<variable>ya_kassa_payment_mode</variable>
		<name>Признак способа расчета</name>
		<options>
			<name>Полная предоплата</name>
			<value>full_prepayment</value>
		</options>
		<options>
			<name>Частичная предоплата</name>
			<value>partial_prepayment</value>
		</options>
		<options>
			<name>Аванс</name>
			<value>advance</value>
		</options>
		<options>
			<name>Полный расчет</name>
			<value>full_payment</value>
